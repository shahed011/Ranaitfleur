@model Ranaitfleur.Model.Subscribers

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div>
    <form asp-action="Subscribe" asp-controller="Auth" method="post">
        <div class="form-group">
            <input class="form-control" asp-for="Email" placeholder="E-mail Address" style="background-color: black"/>
            <span asp-validation-for="Email" class="text-muted"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Subscribe" class="btn btn-default btn-sm" onclick="ClearFields();"/>
        </div>
    </form>
</div>
